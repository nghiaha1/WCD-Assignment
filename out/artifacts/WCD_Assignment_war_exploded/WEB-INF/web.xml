<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.wcd.assignment.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
<!--Login-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
<!--Logout-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.account.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
<!--Register-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
<!--Admin create new category-->
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>
<!--Admin category list-->
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>
<!--User category-->
    <servlet>
        <servlet-name>ListCategoryUserServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.category.ListCategoryUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryUserServlet</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCategoryServlet</servlet-name>
        <servlet-class>com.wcd.assignment.controller.category.EditCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/edit</url-pattern>
    </servlet-mapping>

</web-app>